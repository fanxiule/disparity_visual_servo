<launch>
    <arg name="model" default="burger" />
    <arg name="x_pos" default="0.0" />
    <arg name="y_pos" default="0.0" />
    <arg name="z_pos" default="0.0" />
    <arg name="z_rot" default="0.0" />
    <arg name="open_rviz" default="true" />
    <arg name="rviz_config" default="$(find d435_gazebo_plugin)/rviz/camera_ground.rviz" />

    <!-- Define Gazebo world file -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <!--arg name="world_name" value="$(find turtlebot3_d435)/worlds/turtlebot3_d435_house.world" /-->
        <arg name="world_name" value="$(find turtlebot3_d435)/worlds/turtlebot3_d435_simple_room.world" />
        <arg name="paused" value="false" />
        <arg name="use_sim_time" value="true" />
        <arg name="gui" value="true" />
        <arg name="headless" value="false" />
        <arg name="debug" value="false" />
    </include>

    <!-- Load URDF -->
    <param name="robot_description" command="$(find xacro)/xacro $(find turtlebot3_d435)/urdf/turtlebot3_d435.urdf.xacro" />
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" args="-urdf -model turtlebot3_$(arg model) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -Y $(arg z_rot) -param robot_description" />
    <node pkg="robot_state_publisher" name="robot_state_publisher" type="robot_state_publisher" />
    <node pkg="turtlebot3_d435" name="add_world_frame" type="add_world_frame" />

    <!-- Load Rviz -->
    <group if="$(arg open_rviz)">
        <node pkg="rviz" type="rviz" name="rviz" required="true" args="-d $(arg rviz_config)" />
    </group>
</launch>
  